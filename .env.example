# Configuración del asistente de entorno para el Asistente Stream

# ================================
# CONFIGURACIÓN DE IA (ELIGE UNA)
# ================================

# Google AI Gemini (RECOMENDADO - Gratis y rápido)
# Obtén tu clave en: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=TU_API_KEY_DE_GOOGLE_AI_AQUI

# OpenAI (Fallback - Requiere pagos)
# Obtén tu clave en: https://platform.openai.com/api-keys
OPENAI_API_KEY=TU_API_KEY_DE_OPENAI_AQUI

# ================================
# CONFIGURACIÓN DEL SISTEMA
# ================================

# Intervalo entre capturas de pantalla (en milisegundos)
SCREENSHOT_INTERVAL=10000

# URL del servidor Applio para TTS
APPLIO_URL=http://127.0.0.1:6969

# Modelo de voz para TTS
TTS_MODEL=fr-FR-RemyMultilingualNeural

# Monitor a capturar (1=principal, 2=segundo, etc.)
MONITOR_INDEX=2

# Guardar capturas de pantalla
SAVE_SCREENSHOTS=true

# ================================
# CONFIGURACIÓN DEL ASISTENTE IA
# ================================

# Máximo de palabras por comentario
MAX_WORDS=50

# ================================
# PROBABILIDADES DE COMPORTAMIENTO
# ================================
# Valores entre 0.0 (nunca) y 1.0 (siempre)

# Probabilidad de tomar captura de pantalla (vs conversación casual)
SCREENSHOT_PROBABILITY=0.30

# Probabilidad de contar historias secuenciales
STORY_PROBABILITY=0.15

# Probabilidad de hacer preguntas conversacionales WoW
QUESTION_PROBABILITY=0.20

# ================================
# CONFIGURACIÓN DE AUDIO
# ================================

# Directorio para archivos de audio generados
AUDIO_DIR=audio

# Reproducción automática de comentarios
AUTO_PLAY=true

# Método de reproducción (auto, powershell, simple, wmp)
PLAYBACK_METHOD=auto

# ================================
# CONFIGURACIÓN DE ARCHIVOS
# ================================

# Directorio para capturas de pantalla
SCREENSHOTS_DIR=screenshots
SCREENSHOT_INTERVAL=30000
APPLIO_URL=http://127.0.0.1:6969
TTS_MODEL=fr-FR-RemyMultilingualNeural

# Configuración de directorios
SCREENSHOTS_DIR=screenshots
AUDIO_DIR=audio

# Configuración de reproducción de audio
AUTO_PLAY=true
PLAYBACK_METHOD=auto
